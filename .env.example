# Production Environment Variables for NeonDB
# Copy this file to .env and fill in your actual values

# NeonDB Database URL
# Get this from your Neon dashboard: https://console.neon.tech/
DATABASE_URL="postgresql://username:password@ep-xx-xx-xx.us-east-2.aws.neon.tech/neondb?sslmode=require"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
AUTH_SECRET=skema-nextjs-api-auth-secret
NEXTAUHTH_SECRET=skema-nextjs-api-auth-secret

# JWT Secret for WebSocket authentication
JWT_SECRET="your-super-secure-jwt-secret-at-least-32-chars"

# Resend API for email authentication
RESEND_API_KEY="re_your_resend_api_key_here"

# Base URL for WebSocket server
BASE_URL="http://localhost:3000"

# Optional: Redis for session storage
REDIS_URL="redis://redis:6379"

# App Environment
NODE_ENV="production"